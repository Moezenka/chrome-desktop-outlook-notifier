{
  "name": "Outlook Notifier",
  "description": "What Microsoft should have done.",
  "version": "1.6",
  "author": "Jorge Ortega & Tommy Beadle",
  "permissions": [
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://outlook.office365.com/*",
    "https://outlook.office.com/*",
    "https://outlook.office.com.mcas.ms/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.office365.com/*", "https://*.office.com/*", "https://*.office.com.mcas.ms/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "icons" : {
    "48" : "icons8-microsoft-outlook-2019-48.png",
    "96" : "icons8-microsoft-outlook-2019-96.png",
    "144" : "icons8-microsoft-outlook-144.png"

  },
  "manifest_version": 3
}
